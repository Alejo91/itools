<?xml version="1.0" encoding="UTF-8"?>
<stl:block xmlns="http://www.w3.org/1999/xhtml"
           xmlns:stl="http://xml.itools.org/namespaces/stl">

<form id="loginform" name="loginform" action=";login" method="post"
      stl:attributes="action action">
  <dl>
    <dt>Please enter your login (e.g. jsmith).</dt>
    <dd>
      <label for="username">Username</label>
      <input type="text" id="username" name="username" stl:attributes="value username" />
    </dd>
    <dt>Please enter your password (it will not be displayed in clear
      text).</dt>
    <dd>
      <label for="password">Password</label>
      <input type="password" id="password" name="password" />
    </dd>
  </dl>
  <p>
    <input type="submit" value="Log in" class="button_ok"/>
  </p>
</form>

<script language="javascript">
  <stl:inline if="not username">focus("username");</stl:inline>
  <stl:inline if="username">focus("password");</stl:inline>
</script>

</stl:block>
