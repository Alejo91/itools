<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">

  <h2>Browse Content</h2>

  <div id="gallery_vpane">
    <a stl:repeat="image objects" href="?selected_image=${image/name}"><img
      src="${image/name}/;icon48?width=128&amp;height=128" /></a>
  </div>
  <div id="gallery_main" stl:if="selected">
    <div id="gallery_center">
      <p id="gallery_browse">
        <a id="gallery_previous" stl:if="selected/previous"
          href="${selected/previous}">&lt;</a>
        <span id="gallery_previous" stl:if="not selected/previous">&lt;</span>
        <a id="gallery_next" stl:if="selected/next"
          href="${selected/next}">&gt;</a>
        <span id="gallery_next" stl:if="not selected/next">&gt;</span>
      </p>
      <p id="gallery_preview">
        <a href="${selected/url}"><img src="${selected/preview}" /></a>
      </p>
      <table id="gallery_properties">
        <tbody>
          <tr>
            <th>Name:</th>
            <td>
              <a href="${selected/url}">${selected/title_or_name}</a>
            </td>
          </tr>
          <tr>
            <th>Size:</th>
            <td>
              ${selected/width}x${selected/height}
            </td>
          </tr>
          <tr>
            <th>Format:</th>
            <td>${selected/format}</td>
          </tr>
        </tbody>
      </table>
      <p id="gallery_description">${selected/description}</p>
    </div>
  </div>
  <div class="clear"></div>
</stl:block>
