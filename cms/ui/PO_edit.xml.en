<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">

  <form action=";edit" method="post" stl:if="msgid">
    <input type="hidden" name="messages_index" value="${messages_index}" />
    <table>
      <tr>
        <td>
	  <p style="display: inline">
	    Message
          </p>
	  ${messages_index} / ${messages_total} &nbsp;
	  <a href="${messages_first}">&lt;&lt;</a>
          <a href="${messages_previous}" style="font-size: 10px">&lt;</a>
          <a href="${messages_next}" style="font-size: 10px">&gt;</a>
	  <a href="${messages_last}">&gt;&gt;</a>
          <textarea name="msgid" cols="65" rows="8" readonly="">${msgid}></textarea>
        </td>
      </tr>
      <tr>
        <td>
	  translation<br />
          <textarea name="msgstr" cols="65" rows="8">${msgstr}</textarea>
        </td>
      </tr>
      <tr>
        <td>
          <input type="submit" value="Change" class="button_ok" />
        </td>
      </tr>
    </table>
  </form>

  <p stl:if="not msgid">
    There aren't messages.
  </p>

</stl:block>
