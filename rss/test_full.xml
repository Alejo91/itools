<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html
     PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
     "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:stl="http://xml.itools.org/namespaces/stl">
  <head></head>
  <body>
    <h1><a stl:content="channel/title" stl:attributes="href channel/link"></a></h1>
    <p stl:content="channel/description"></p>
    <a stl:attributes="href channel/image/link"><img stl:attributes="src channel/image/url; width channel/image/width; height channel/image/height; alt channel/image/title; title channel/image/description"></img></a>
    <ul>
      <li stl:repeat="item channel/items">
        <a stl:content="item/title" stl:attributes="href item/link"></a>
        <p><small stl:content="item/pubDate"></small></p>
        <p stl:content="item/description"></p>
      </li>
    </ul>
  </body>
</html>
