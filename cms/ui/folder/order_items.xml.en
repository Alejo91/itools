<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">
  <form action="." method="post">
    <stl:block>
      <h2>Ordered Objects</h2>
      <p stl:if="not ordered_folders">There are no ordered objects</p>
      <stl:block stl:if="ordered_folders">
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Title</th>
              <th>State</th>
            </tr>
          </thead>
          <tbody>
            <tr stl:repeat="folder ordered_folders" class="${repeat/folder/even}">
              <td><input type="checkbox" name="ordered_names"
                         value="${folder/name}" /></td>
              <td>
                <a stl:if="folder/is_orderaware" href="${folder/path}">
                  ${folder/name}
                </a>
                <stl:inline stl:if="not folder/is_orderaware">
                  ${folder/name}
                </stl:inline>
              </td>
              <td>${folder/title}</td>
              <td>${folder/workflow_state}</td>
            </tr>
          </tbody>
        </table>
        <p>
          <input type="submit" name=";order_folders_up" value="Order up" />
          <input type="submit" name=";order_folders_down" value="Order down" />
          <input type="submit" name=";order_folders_top" value="Order top" />
          <input type="submit" name=";order_folders_bottom" value="Order bottom" />
          <input type="submit" name=";order_folders_unordered"
                 value="Move into unordered category" />
        </p>
      </stl:block>
    </stl:block>
    <stl:block>
      <h2>Unordered Objects</h2>
      <p stl:if="not unordered_folders">There are no unordered objects</p>
      <stl:block stl:if="unordered_folders">
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Title</th>
              <th>State</th>
            </tr>
          </thead>
          <tbody>
            <tr stl:repeat="folder unordered_folders" class="${repeat/folder/even}">
              <td><input type="checkbox" name="unordered_names" value="${folder/name}" /></td>
              <td>${folder/name}</td>
              <td>${folder/title}</td>
              <td>${folder/workflow_state}</td>
            </tr>
          </tbody>
        </table>
        <p>
          <input type="submit" name=";order_folders_ordered"
                 value="Move into ordered category" />
        </p>
      </stl:block>
    </stl:block>
  </form>
</stl:block>
