<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">
  <div style="display: none" id="epoz_widget_${form_name}">
    <div id="ToolBar_${form_name}">
      <img name="epoz_button_hyperlink" class="button epoz_button_hyperlink"
        src="../images/epoz/epoz_button_hyperlink.png" width="23" height="22"
        alt="Insert Link" title="Insert Link"
        onclick="popup(';addlink_form', 640, 480);"/><img
        class="button epoz_button_anchor"
        src="../images/epoz/epoz_button_anchor.png" width="23" height="22"
        alt="Insert Anchor" title="Insert Anchor" onclick="CreateAnchor();"
        name="epoz_button_anchor" /><img
        class="button epoz_button_image"
        src="../images/epoz/epoz_button_image.png" width="23" height="22"
        alt="Insert Image" title="Insert Image"
        onclick="popup(';addimage_form', 640, 480);"
        name="epoz_button_image" />
      &nbsp;&nbsp;
      <select id="formatblock" class="formatblock"
        onchange="SelectFormat(this);">
        <option value="">Normal</option>
        <option value="&lt;p&gt;">Paragraph</option>
        <option value="&lt;h1&gt;">Heading 1</option>
        <option value="&lt;h2&gt;">Heading 2</option>
        <option value="&lt;h3&gt;">Heading 3</option>
        <option value="&lt;h4&gt;">Heading 4</option>
        <option value="&lt;h5&gt;">Heading 5</option>
        <option value="&lt;h6&gt;">Heading 6</option>
        <option value="&lt;pre&gt;">Formatted</option>
      </select>
      <img class="button epoz_button_bold" name="epoz_button_bold"
        src="../images/epoz/epoz_button_bold.png" alt="Bold" title="Bold"
        onclick="FormatText('bold', '');" /><img
        class="button epoz_button_italic"
        src="../images/epoz/epoz_button_italic.png" width="23" height="22"
        alt="Italic" title="Italic" onclick="FormatText('italic', '');"
        name="epoz_button_italic" /><img class="button epoz_button_underline"
        src="../images/epoz/epoz_button_underline.png" width="23" height="22"
        alt="Underline" title="Underline"
        onclick="FormatText('underline', '');"
        name="epoz_button_underline" /><img
        class="button epoz_button_strikethrough"
        src="../images/epoz/epoz_button_strikethrough.png"
        width="23" height="22" alt="Strikethrough" title="Strikethrough"
        onclick="FormatText('strikethrough', '');"
        name="epoz_button_strikethrough" />
      <img class="button epoz_button_subscript"
        src="../images/epoz/epoz_button_subscript.gif" width="23" height="22"
        alt="Subscript" title="Subscript"
        onclick="FormatText('subscript', '');"
        name="epoz_button_subscript" /><img
        class="button epoz_button_superscript"
        src="../images/epoz/epoz_button_superscript.gif" width="23" height="22"
        alt="Superscript" title="Superscript"
        onclick="FormatText('superscript', '');"
        name="epoz_button_superscript" />
      <img class="button epoz_button_unformat"
        src="../images/epoz/epoz_button_unformat.png" width="23" height="22"
        alt="Remove Format" title="Remove Format"
        onclick="FormatText('removeformat', '');" name="epoz_button_unformat" />
      <img class="button epoz_button_textcolor"
        src="../images/epoz/epoz_button_textcolor.png" width="23" height="22"
        alt="Text Color" title="Text Color" name="epoz_button_textcolor"
        onclick="SetTextColor(';epoz_color_form');" /><img
        class="button epoz_button_bgcolor"
        src="../images/epoz/epoz_button_bgcolor.png" width="23" height="22"
        alt="Background Color" title="Background Color"
        onclick="SetBackColor(';epoz_color_form');"
        name="epoz_button_bgcolor" />
      <img class="button epoz_button_left_just"
        src="../images/epoz/epoz_button_left_just.png" width="23" height="22"
        alt="Align Left" title="Align Left" onclick="FormatText('justifyleft',
        '');" name="epoz_button_left_just" /><img
        class="button epoz_button_centre"
        src="../images/epoz/epoz_button_centre.png" width="23" height="22"
        alt="Center" title="Center" onclick="FormatText('justifycenter', '');"
        name="epoz_button_centre" /><img
        class="button epoz_button_right_just"
        src="../images/epoz/epoz_button_right_just.png" width="23" height="22"
        alt="Align Right" title="Align Right"
        onclick="FormatText('justifyright', '');"
        name="epoz_button_right_just" />
      <img class="button epoz_button_numbered_list"
        src="../images/epoz/epoz_button_numbered_list.gif"
        width="23" height="22"
        alt="Ordered List" title="Ordered List"
        onclick="FormatText('insertorderedlist', '');"
        name="epoz_button_numbered_list" /><img
        class="button epoz_button_list"
        src="../images/epoz/epoz_button_list.gif"
        width="23" height="22" alt="Unordered List" title="Unordered List"
        onclick="FormatText('insertunorderedlist', '');"
        name="epoz_button_list" /><img
        class="button epoz_button_outdent"
        src="../images/epoz/epoz_button_outdent.png" width="23" height="22"
        alt="Outdent" title="Outdent" onclick="FormatText('outdent', '');"
        name="epoz_button_outdent" /><img
        class="button epoz_button_indent"
        src="../images/epoz/epoz_button_indent.png" width="23" height="22"
        alt="Indent" title="Indent" onclick="FormatText('indent', '');"
        name="epoz_button_indent" />
      <img class="button epoz_button_hr"
        src="../images/epoz/epoz_button_hr.gif" width="23" height="22"
        alt="Insert Rule" title="Insert Rule"
        onclick="FormatText('inserthorizontalrule', '');"
        name="epoz_button_hr" /><img
        class="button epoz_button_table"
        src="../images/epoz/epoz_button_table.gif" width="23" height="22"
        alt="Insert Table" title="Insert Table"
        onclick="popup(';epoz_table_form', 220, 320)"
        name="epoz_button_table" />
      <img class="button epoz_button_undo"
        src="../images/epoz/epoz_button_undo.png"
        width="23" height="22" alt="Undo" title="Undo"
        onclick="FormatText('undo', '');" name="epoz_button_undo" /><img
        class="button epoz_button_redo"
        src="../images/epoz/epoz_button_redo.png"
        width="23" height="22" alt="Redo" title="Redo"
        onclick="FormatText('redo', '');" name="epoz_button_redo" />
      <br />
      <iframe frameborder="1" class="epoz_frame" id="Iframe_${form_name}"
        name="EpozEditor" onload="InitDocument(this);"
        src="${iframe}"></iframe>
    </div>

    <textarea class="epoz_textarea" style="display: none" disabled="1"
      id="${form_name}" name="${form_name}">${js_data}</textarea>
    <div>
      <input type="checkbox" class="epoz_switch" id="CB_${form_name}" 
        onclick="redirectAndSwitchViewMode(this);" />
      <label for="CB_${form_name}" style="font-size: 0.7em;">HTML</label>
      <input type="hidden" name="dress_name" value="${dress_name}" />
    </div>
  </div>

  <script type="text/javascript">
    document.getElementById('epoz_widget_${form_name}').style.display = 'inline';
    document.getElementById('${form_name}').disabled = 0;
  </script>
  <noscript>
    <textarea class="epoz_textarea" name="${form_name}">${js_data}</textarea>
  </noscript>
</stl:block>
