<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"
  "-//W3C//DTD XHTML 1.0 Strict//EN">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://xml.itools.org/namespaces/stl">

  <h2>${title}</h2>
  <p><em>${description}</em></p>

  <p class="${repeat/thread/even}" stl:repeat="thread threads">
    <a class="forum_thread_title" href="${thread/name}">${thread/title}</a>
    <br/>
    Posted by <span class="forum_thread_author">${thread/author}</span>,
    the <span class="forum_thread_date">${thread/date}</span>.
    <br/>
    ${thread/comments} comments.
  </p>

</stl:block>
